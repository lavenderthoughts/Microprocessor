MODE 2
        OUTPUT 2500AD
.ORG 5000H
CODE SEGMENT
        ASSUME CS:CODE
        MOV AL,94H
        MOV DX,FFFFH
        OUT DX,AL
        MOV AL,04H
        MOV DX,FFFDH
        OUT DX,AL
CODE ENDS
END

