MODE 0
 OUTPUT 2500AD
.ORG 2000H
CODE SEGMENT
        ASSUME CS:CODE
START:
        MOV AL,90H
REPEAT: MOV DX,FFFFH
        OUT DX,AL
        MOV DX,FFFDH
        MOV AL,05H
        OUT DX,AL
        JMP REPEAT
CODE ENDS
        END
